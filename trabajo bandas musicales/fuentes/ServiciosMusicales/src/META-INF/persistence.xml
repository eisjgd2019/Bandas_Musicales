<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ServiciosMusicalesPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.serviciosmusicales.entity.Persona</class>
    <class>com.serviciosmusicales.entity.Usuario</class>
    <class>com.serviciosmusicales.entity.Musico</class>
    <class>com.serviciosmusicales.entity.Generomusical</class>
    <class>com.serviciosmusicales.entity.Serviciocomplementario</class>
    <class>com.serviciosmusicales.entity.Solicitud</class>
    <class>com.serviciosmusicales.entity.Instrumento</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/serviciosmusicales?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
